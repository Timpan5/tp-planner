<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Task Type"
        android:id="@+id/taskType"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Event"
        android:id="@+id/exercise"
        android:layout_below="@+id/taskType"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="81dp"
        android:onClick="clickEvent"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Assignment"
        android:id="@+id/assignment"
        android:layout_below="@+id/exercise"
        android:layout_centerHorizontal="true"
        android:onClick="clickAssignment"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Meeting"
        android:id="@+id/meeting"
        android:layout_below="@+id/assignment"
        android:layout_centerHorizontal="true"
        android:onClick="clickMeeting"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Project"
        android:id="@+id/project"
        android:layout_below="@+id/meeting"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clickProject"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Custom"
        android:id="@+id/custom"
        android:layout_below="@+id/project"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />
</RelativeLayout>
